@model IEnumerable<Contractor>

@if (ViewBag.isAvailable == true) {
    <h2>Available Contractors</h2>
}else {
    <h2> Contractors </h2>
}
<a href="@Url.Action("Details")" class="btn btn-primary">
    Create New
    <span class="glyphicon glyphicon-plus"></span>
</a>

@if ((Model ?? new Contractor[] { }).Any())
{
    if (Model.Count() == 1)
    {
        <p>There is @Model.Count() contractor</p>
    }
    else
    {
        <p>There are @Model.Count() contractors</p>
    }
}
else {
    <p>There are no contractors: @Html.ActionLink("Add Contractor", "Details")</p>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var contractor in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => contractor.FirstName)
            </td>
            <td>
                @Html.DisplayFor(m => contractor.LastName)
            </td>            
            <td>
                @Html.ActionLink("Update", "Details", new { id = contractor.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = contractor.ID })

            </td>
        </tr>
    }

</table>