@using STAR.Web.Models;
@model PositionModel
<h2>Positions</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false);

    <div class="form-horizontal">
        <div class="form-group row">
            <div class="col-md-6 col-sm-12">                
                @*@Html.ValidateFor(x => x.SkillName)*@
                @Html.LabelFor(m => m.PositionName)
                @Html.TextBoxFor(m => m.PositionName, new { @class = "form-control" })</div>
        </div>
        <div class="form-group row">
            <div class="col-md-6 col-sm-12">                
                @*@Html.ValidateFor(x => x.Description)*@
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { maxlength = 256, @class = "form-control", placeholder = "Max length 256 characters" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
                <button type="button" class="btn btn-default pull-right margin-right">Cancel</button>
            </div>
        </div>
    </div>
}