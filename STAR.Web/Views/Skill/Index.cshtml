@model IEnumerable<Skill>


<h2>
    Skills
    <a href="@Url.Action("Details")" class="btn btn-default">
        <span class="glyphicon glyphicon-plus"></span>
    </a>
</h2>


@if((Model ?? new Skill[] { }).Any()) {
    <p>There are @Model.Count() Skills</p>
}
else {
    <p>No Skills have been added.  @Html.ActionLink("Add one!", "Details")</p>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Edit
        </th>
    </tr>

    @foreach (Skill skill in Model.OrderBy(skill => skill.Name))
            {
        <tr>
            <td>
                <strong>@Html.DisplayFor(n => skill.Name)</strong>
            </td>
            <td class="td">
                @Html.DisplayFor(d => skill.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Details", new { id = skill.SkillId}) |
                @Html.ActionLink("Delete", "Delete", new { id = skill.SkillId })
            </td>
        </tr>
    }
</table>