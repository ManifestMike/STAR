@using STAR.Web.Models;
@model SkillModel

<h2>Skills</h2>

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false);

    <div class="form-horizontal">
            
        <div class="form-group">
            @Html.LabelFor(m => m.SkillName)
            @Html.TextBoxFor(m => m.SkillName, new { @class = "form-control" })
        </div>
            
          
        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { maxlength = 256, @class = "form-control" })
            <div>Max desprition length: 256 characters</div>
        </div>

        <input type="submit" class="btn btn-primary"/>
    </div>
}