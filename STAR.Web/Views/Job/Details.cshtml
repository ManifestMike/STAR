@using STAR.Web.Models;
@model JobModel
<h2>Jobs</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false);

    <div class="form-horizontal">
        <div class="form-group">
            @*@Html.ValidateFor(x => x.SkillName)*@
            @Html.LabelFor(m => m.JobName)
            @Html.TextBoxFor(m => m.JobName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @*@Html.ValidateFor(x => x.Description)*@
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { maxlength = 256, @class = "form-control" })
            <p>Max Description Length is 256</p>
        </div>
        <input type="submit" class="btn btn-primary" />
    </div>
}